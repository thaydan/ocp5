{% extends 'base.html.twig' %}

{% block contenuPrincipal %}
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">
            <img class="masthead-avatar rounded-circle mb-5" src="assets/img/avatar.jpg" alt="..." />
            <h1 class="masthead-heading text-uppercase">Romain Royer</h1>
            <p class="masthead-subheading font-weight-light mt-3 mb-0">Blogueur - Consultant - Développeur Web</p>
        </div>
    </header>

    <section class="page-section portfolio">
        <div class="container">
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-5">Blog</h2>
            {{ element('posts', posts) }}
            <div class="text-center mt-2">
                <a class="btn btn-xl btn-primary" href="/blog">
                    Tous les articles
                </a>
            </div>
        </div>
    </section>

    <section class="page-section bg-primary text-white mb-0">
        <div class="container">
            <h2 class="page-section-heading text-center text-uppercase text-white mb-5">À propos</h2>
            <div class="row">
                <div class="col-lg-4 ml-auto">
                    <p class="lead">
                        Actuellement en formation chez Openclassrooms, je propose mes services en formation et aussi en création de sites internet
                    </p>
                </div>
                <div class="col-lg-4 mr-auto">
                    <p class="lead">
                        Je suis également bloggueur depuis 2013, venez faire un tour sur <a class="text-secondary" href="https://currenttrends.fr" target="_blank">Current Trends</a>
                    </p>
                </div>
            </div>
            <div class="text-center mt-4">
                <a class="btn btn-xl btn-outline-light" href="/assets/cv.pdf" target="_blank">
                    <i class="fas fa-download mr-2"></i>
                    Téléchargez mon CV
                </a>
            </div>
        </div>
    </section>

    <section class="page-section">
        <div class="container">
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-5">Contactez-moi</h2>
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    {{ form(formContact, true, '/contact') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}